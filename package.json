{
  "name": "aria-ai-chat",
  "version": "1.0.0",
  "description": "Aria AI Chat Application with Clean Architecture",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node start.js --prod",
    "dev": "NODE_ENV=development LLM_ENDPOINT=http://192.168.178.182:1234/v1/chat/completions LLM_MODEL=meta-llama-3.1-8b-instruct node start.js --dev",
    "test": "NODE_ENV=test jest",
    "test:unit": "NODE_ENV=test jest tests/repositories tests/services",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:e2e": "NODE_ENV=test jest tests/e2e",
    "test:generate": "node tests/generate-tests.js",
    "test:verbose": "NODE_ENV=test jest --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cleanup": "node tests/test-cleanup.js",
    "test:all": "node tests/run-all-tests.js",
    "setup": "node setupServices.js",
    "validate": "node validate-services.js",
    "health": "node -e \"require('./setupServices').checkServicesHealth().then(h => console.log(JSON.stringify(h, null, 2)))\""
  },
  "keywords": [
    "ai",
    "chat",
    "clean-architecture",
    "psychology",
    "conversation"
  ],
  "author": "Aria AI Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "jest": "^30.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/**/*.test.js",
      "!node_modules/**"
    ],
    "testTimeout": 10000
  }
}
